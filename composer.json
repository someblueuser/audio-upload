{
    "name": "someblueuser/audio-upload",
    "description": "Custom audio upload extension for Flarum",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "^1.0",
        "fof/upload": "^1.20.0"
    },
    "autoload": {
        "psr-4": {
            "AudioUpload\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Audio Upload",
            "icon": {
                "name": "fas fa-music",
                "backgroundColor": "#000000",
                "color": "#ffffff"
            }
        }
    }
}
